<%- include('../layout/_index.ejs') %>
<div class="container">
  <div class="d-flex justify-content-end m-2">
    <a class="btn btn-primary mb-2 mt-3" href="/articles/new" role="button">
      Tweet
    </a>
  </div>
  <% articles.forEach(article=> { %>
  <div class="card">
    <div class="card-body">
      <h4 class="card-title"><%= article.title %></h4>
      <p class="card-text"><%= article.markdown%></p>
    </div>
    <div class="d-flex justify-content-end m-2">
      <a
        class="btn btn-primary"
        href="/articles/<%= article.slug%>"
        role="button"
      >
        <i class="bi bi-eye"></i>
      </a>
      <a
        class="btn btn-primary me-1 ms-1"
        href="/articles/edit/<%= article.id%>"
        role="button"
      >
        <i class="bi bi-pencil-fill"></i>
      </a>
      <form action="/articles/<%= article.id %>?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-danger">
          <i class="bi bi-trash-fill"></i>
        </button>
      </form>
    </div>
  </div>
  <br />
  <% }); %>
</div>
